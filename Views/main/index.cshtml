@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Reem+Kufi+Ink&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Reem+Kufi+Ink&family=Roboto+Condensed:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <!-- First section with full-width image and centered text -->
    <div class="container-fluid p-0" style="position: relative;">
        <img class="img-fluid w-100" style="filter: brightness(50%);" src="~/Image/Rectangle 1.png" alt="Full width image" />
        <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; text-align: center; font-family: 'Reem Kufi Ink', sans-serif; font-size: 64px; color: #FF4545;">
            <h1>Welcome To Our Restaurant</h1>
        </div>
    </div>

    <!-- Second section with quote box -->
    <div style="position: relative; bottom: 50px; left: 50%; transform: translateX(-50%); max-width: 90%; width: 1300px; background-color: #C5705D; border-radius: 40px; box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1); text-align: center; padding: 20px;">
        <p style="font-family: 'Roboto Condensed', sans-serif; font-size: 57px; color: white; margin: 0; font-style: italic">
            "Good food is the foundation of genuine happiness."
        </p>
        <p style="font-family: 'Roboto Condensed', sans-serif; font-size: 40px; color: white; margin: 0;">
            - Auguste Escoffier
        </p>
    </div>

    <!-- Third section with Rectangle 3 background image -->
    <div style="position: relative; width: 100%; margin-top: 0px;">
        <img class="img-fluid w-100" src="~/Image/Rectangle 3.png" alt="Image Below Rectangle"
             style="width: 100%; height: auto; object-fit: cover; z-index: 1;">

        <!-- Cards overlaying the image and inside the Rectangle 3 -->
        <div style="position: absolute; top: 0; left: 50%; transform: translateX(-50%); width: 90%; max-width: 1200px; z-index: 2; margin-top: 40px;">
            <div class="row justify-content-around">
                <div class="col-md-4">
                    <div class="card food-item" style="background-color: #C5705D; border-radius: 40px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
                        <img src="~/Image/image (11).png" class="card-img-top" style="padding:40px">
                        <div class="card-body" style="padding: 20px;color:white;">
                            <h4 class="card-title">Bánh xèo</h4>
                            <p class="card-text">$1234</p>
                            <a href="#" class="btn btn-primary" style="width: 100%; padding-left: 30px; padding-right: 30px; border-radius:40px">Order</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card food-item" style="background-color: #C5705D; border-radius: 40px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
                        <img src="~/Image/image (12).png" class="card-img-top" style="padding:40px">
                        <div class="card-body" style="padding: 20px; color: white">
                            <h4 class="card-title">Bo Kho</h4>
                            <p class="card-text">$5678</p>
                            <a href="#" class="btn btn-primary" style="width: 100%; padding-left: 30px; padding-right: 30px; border-radius:40px">Order</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card food-item" style="background-color: #C5705D; border-radius: 40px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
                        <img src="~/Image/image (13).png" class="card-img-top" style="padding:40px">
                        <div class="card-body" style="padding: 20px; color: white">
                            <h4 class="card-title">Bánh mì</h4>
                            <p class="card-text">$9012</p>
                            <a href="#" class="btn btn-primary" style="width: 100%; padding-left: 30px; padding-right: 30px; border-radius:40px">Order</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
